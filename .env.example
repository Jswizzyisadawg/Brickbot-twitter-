# === BRICK BOT v5.0 - ENVIRONMENT CONFIGURATION ===

# === CLAUDE API (REQUIRED) ===
CLAUDE_API_KEY=your_claude_api_key_here

# === TWITTER/X API (REQUIRED) ===
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here
TWITTER_CALLBACK_URL=http://localhost:3000/callback

# These will be auto-generated by OAuth setup:
TWITTER_ACCESS_TOKEN=auto_generated_by_setup
TWITTER_REFRESH_TOKEN=auto_generated_by_setup
TWITTER_TOKEN_EXPIRES=auto_generated_timestamp
TWITTER_USER_ID=your_twitter_user_id

# === SUPABASE (REQUIRED for real-time UI) ===
# Get from: https://supabase.com → Your Project → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# === TAVILY (REQUIRED for research) ===
# Get from: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here

# === MEM0 (OPTIONAL - for enhanced memory) ===
# Get from: https://mem0.ai
MEM0_API_KEY=your_mem0_api_key_here

# === OPENAI (OPTIONAL - fallback for Mem0 local mode) ===
OPENAI_API_KEY=your_openai_api_key_here

# === BOT CONFIGURATION ===
LOG_LEVEL=info
NODE_ENV=development

# Cycle interval in minutes (default: 30)
BRICK_CYCLE_INTERVAL=30

# === LEGACY SETTINGS (can be removed) ===
# These are from the old crypto bot and no longer used
# COINBASE_API_KEY=not_needed
# COINBASE_API_SECRET=not_needed
